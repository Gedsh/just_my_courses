<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButtonsStyle">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="UserInputEditTextStyle">
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    <style name="IntermediateResultTextViewStyle">
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
</resources>
