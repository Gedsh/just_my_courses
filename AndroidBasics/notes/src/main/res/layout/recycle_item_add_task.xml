<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/imageButtonAddTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetTop="@dimen/recycle_item_add_task_inset_top"
        android:insetBottom="@dimen/recycle_item_add_task_inset_bottom"
        android:insetLeft="@dimen/recycle_item_add_task_inset_side"
        android:insetRight="@dimen/recycle_item_add_task_inset_side"
        android:padding="@dimen/recycle_item_add_task_padding"
        app:icon="@drawable/ic_add_note"
        app:iconGravity="textEnd"
        app:srcCompat="@drawable/ic_add_note" />
</FrameLayout>
