<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".framework.ui.viewpager.earth.EarthFragment">

    <pan.alexander.pictureoftheday.framework.ui.main.EquilateralImageView
        android:id="@+id/nasaImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.0"
        android:contentDescription="@string/image_stub"
        android:padding="@dimen/common_fragment_nasa_image_padding"
        app:srcCompat="@drawable/ic_no_photo_vector" />

    <ProgressBar
        android:id="@+id/imageLoadingProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
