<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_name_text_view"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Repo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_description_text_view"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_details_name_text_view"
        tools:text="Description" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_created_title_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        android:text="@string/repo_details_created_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_details_description_text_view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_created_value_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        app:layout_constraintBottom_toBottomOf="@+id/repo_details_created_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repo_details_created_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/repo_details_created_title_text_view"
        tools:text="@tools:sample/lorem" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_updated_title_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        android:text="@string/repo_details_updated_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_details_created_title_text_view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_updated_value_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        app:layout_constraintBottom_toBottomOf="@+id/repo_details_updated_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repo_details_updated_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/repo_details_updated_title_text_view"
        tools:text="@tools:sample/lorem" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_forks_title_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        android:text="@string/repo_details_forks_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_details_updated_title_text_view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_forks_value_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        app:layout_constraintBottom_toBottomOf="@+id/repo_details_forks_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repo_details_forks_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/repo_details_forks_title_text_view"
        tools:text="@tools:sample/lorem" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_issues_title_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        android:text="@string/repo_details_issues_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_details_forks_title_text_view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_issues_value_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        app:layout_constraintBottom_toBottomOf="@+id/repo_details_issues_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repo_details_issues_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/repo_details_issues_title_text_view"
        tools:text="@tools:sample/lorem" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_watchers_title_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        android:text="@string/repo_details_watchers_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_details_issues_title_text_view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_details_watchers_value_text_view"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/repo_details_text_padding"
        app:layout_constraintBottom_toBottomOf="@+id/repo_details_watchers_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repo_details_watchers_title_text_view"
        app:layout_constraintTop_toTopOf="@+id/repo_details_watchers_title_text_view"
        tools:text="@tools:sample/lorem" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/repo_details_topics_chip_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_details_watchers_title_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
